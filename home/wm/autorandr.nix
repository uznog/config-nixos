{ config, pkgs, ... }:

let
  preswitch = ''
    dunstify "Autorandr" "Reloading wallpaper and polybar!"
    WALLPAPER="$HOME/.background-image" [ -e "$WALLPAPER" ] && feh --bg-scale "$WALLPAPER"
    pkill -f polybar
  '';
in
with pkgs.lib;
{
  programs.autorandr = {
    enable = true;

    profiles = {

      "detached" = {
        fingerprint = {
          eDP-1 = "";
        };
        config = {
          eDP-1 = {
            enable = true;
            primary = true;
            position = "0x0";
            mode = "3840x2400";
            rotate = "normal";
            dpi = 144;
          };
        };
        hooks.preswitch = toString "${preswitch}";
        hooks.postswitch = ''
          polybar xps &
        '';
      };

      "home" = {
        fingerprint = {
          eDP-1 = "";
          DP-1 = "";
        };
        
        config = {
          eDP-1 = {
            enable = true;
            primary = false;
            position = "0x0";
            mode = "3840x2400";
            rotate = "normal";
            dpi = 144;
          };
          DP-1 = {
            enable = true;
            primary = true;
            position = "3840x0";
            mode = "2560x1440";
            rotate = "normal";
            dpi = 96;
          };
        };
        hooks.preswitch = toString "${preswitch}";
        hooks.postswitch = ''
          polybar xps &
          polybar benq &
        '';
      };

      "work" = {
        fingerprint = {
          eDP-1 = "";
          DP-3 = "";
        };
        
        config = {
          eDP-1 = {
            enable = true;
            primary = false;
            position = "0x0";
            mode = "3840x2400";
            rotate = "normal";
            dpi = 144;
          };
          DP-3 = {
            enable = true;
            primary = true;
            position = "3840x0";
            mode = "2560x1440";
            rotate = "normal";
            dpi = 96;
          };
        };
        hooks.preswitch = toString "${preswitch}";
        hooks.postswitch = ''
          polybar xps &
          polybar benq &
        '';
      };
    };
  };
}
