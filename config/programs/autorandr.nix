{ config, pkgs, ... }:

let
  postswitch = ''
    dunstify "Autorandr" "Reloading wallpaper and polybar!"
    if [[ -e $HOME/.background-image ]]; then feh --bg-scale $HOME/.background-image ; fi
    systemctl --user restart polybar.service
  '';
in
with pkgs.lib;
{
  programs.autorandr = {
    enable = true;

    profiles = {

      "detached" = {
        fingerprint = {
          eDP-1 = "";
        };
        config = {
          eDP-1 = {
            enable = true;
            primary = true;
            position = "0x0";
            mode = "3840x2400";
            rotate = "normal";
            dpi = 192;
          };
        };
      };

      "home" = {
        fingerprint = {
          eDP-1 = "";
          DP-1 = "";
        };
        
        config = {
          eDP-1 = {
            enable = true;
            primary = false;
            position = "0x0";
            mode = "2560x1600";
            rotate = "normal";
            dpi = 96;
          };
          DP-1 = {
            enable = true;
            primary = true;
            position = "2560x0";
            mode = "2560x1440";
            rotate = "normal";
          };
        };
        hooks.postswitch = toString "${postswitch}";
      };
    };
  };
}
